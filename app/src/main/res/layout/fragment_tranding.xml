<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context="com.readme.view.tranding.TrandingFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >


                <TextView
                        android:paddingTop="12dp"
                        android:id="@+id/subjectName"
                        android:text="Tranding"
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
        <com.madapps.liquid.LiquidRefreshLayout android:layout_width="match_parent"
                                                android:id="@+id/refreshLayoutTranding"
                                                android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                    android:paddingTop="10dp"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    tools:listitem="@layout/articles_layout_list_item"
                    android:id="@+id/rcViewTranding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />
        </com.madapps.liquid.LiquidRefreshLayout>
    </LinearLayout>
</RelativeLayout>
