<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:clickable="true"
        android:foreground="?android:selectableItemBackground"
        app:cardBackgroundColor="@color/cardview_light_background"
        android:layout_margin="8dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <pl.droidsonroids.gif.GifImageView
                android:id="@+id/mvPoster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/walkcycle"
                android:scaleType="centerCrop"/>
        <TextView
                android:id="@+id/txtATitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mvPoster"
                android:textAlignment="textStart"
                android:lines="1"
                android:paddingLeft="20dp"
                android:textColor="#696969"
                android:text="Title"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
        />

        <TextView
                android:id="@+id/txtADate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtATitle"
                android:textAlignment="textEnd"
                android:text="Tue, 17 June 19"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:lines="1"
                android:layout_alignParentStart="true" android:layout_marginStart="1dp"
                android:layout_marginTop="3dp"/>



    </RelativeLayout>
</android.support.v7.widget.CardView>