<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >


    <ImageView
            android:paddingTop="10dp"
            android:id="@+id/backBtnsubject"
            android:src="@drawable/ic_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
    />
        <TextView
                android:paddingTop="12dp"
                android:id="@+id/subjectName"
                android:text="subject_name"
                android:textColor="@color/colorPrimary"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>
    <com.madapps.liquid.LiquidRefreshLayout android:layout_width="match_parent"
                                            android:id="@+id/refreshLayoutSearch"
                                            android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
                android:paddingTop="10dp"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                tools:listitem="@layout/articles_layout_list_item"
                android:id="@+id/rcViewSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />
    </com.madapps.liquid.LiquidRefreshLayout>
</LinearLayout>