<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:background="@color/colorAccent"
                tools:context="com.readme.view.tranding.TrandingFragment">


    <com.madapps.liquid.LiquidRefreshLayout
            android:id="@+id/profileLayoutRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/background_profile"
            android:layout_centerHorizontal="true"
            android:paddingVertical="20dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_potho" />
            <TextView
                    android:text="Akun:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />

            <TextView
                    android:paddingTop="10dp"
                    android:id="@+id/name"
                    android:textAllCaps="true"
                    android:text="Nama"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />

    <TextView
            android:paddingTop="10dp"
            android:id="@+id/email"
            android:text="Email"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
            <TextView
                    android:paddingTop="20dp"
                    android:text="Tanggal Bergabung:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />

            <TextView
                    android:paddingTop="10dp"
                    android:id="@+id/joined_date"
                    android:text="Since"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />




        </LinearLayout>

    </com.madapps.liquid.LiquidRefreshLayout>
<LinearLayout
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!--<Button-->
            <!--android:text="L o g o u t"-->
            <!--android:layout_gravity="bottom"-->
            <!--android:layout_marginBottom="50dp"-->
            <!--android:layout_marginVertical="50dp"-->
            <!--android:id="@+id/btnLogout"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"/>-->
</LinearLayout>


</RelativeLayout>
