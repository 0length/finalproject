<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:dist="http://schemas.android.com/apk/distribution"
          package="com.readme">

    <uses-permission android:name="android.permission.INTERNET"/>
    <dist:module dist:instant="true"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/favicon"
            android:label="@string/app_name"
            android:roundIcon="@drawable/favicon"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <uses-library
                android:name="org.apache.http.legacy"
                android:required="false" />
        <activity android:name=".StartApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".view.detail.ArticleDetailActivity"/>
        <activity android:name=".view.search.SearchActivity"/>
        <activity android:name=".view.bysubject.BySubjectActivity"/>
        <activity android:name=".view.auth.LoginActivity"/>
        <activity android:name=".view.auth.RegisterActivity"/>
        <activity android:name=".view.MainActivity" />
</application>

</manifest>